<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/layoutA">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nagyButton"
        android:text="Hello World!"
        android:textAlignment="center"
        android:id="@+id/editText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="NAGY BETŰS SZÖVEG"
        android:id="@+id/nagyButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nagyButton"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="KIS BETŰS SZÖVEG"
        android:id="@+id/kisButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kisButton"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="VÉLETLEN SZÍN GENERÁLÁS"
        android:id="@+id/szinButton"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/szinButton"
        android:textAlignment="center"
        android:height="50sp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:text="Hello World!"
        android:id="@+id/textView"/>

</RelativeLayout>